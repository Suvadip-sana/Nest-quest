<% layout("/layouts/boilerplate") %>

<body>

   
    <div class="register-photo">
        <div class="form-container">
            <div class="image-holder2"></div>
            <form action="/login" method="post" novalidate class="needs-validation">
                <h2 class="text-center"><strong>Welcome</strong> back</h2>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <!-- <div class="form-group"><input class="form-control" type="password" name="password-repeat" placeholder="Password (repeat)"></div> -->
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Sign In</button>
                </div>
                <div class="already">You don't have an account? <a href="/signup" >Create account</a> here.</div>
            </form>
        </div>
    </div>




</body>